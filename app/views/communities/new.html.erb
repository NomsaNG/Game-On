<h3>Create your own vibe</h3>

<%= form_with(model: @community, url: communities_path, method: :post) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :visibility %>
    <%= form.select :visibility, Community::VALID_VISIBILITIES %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Community' %>
  </div>
<% end %>

<%= link_to 'Back to Communities', communities_path %>
