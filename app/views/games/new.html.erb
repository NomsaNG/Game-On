<div class="container" style="width:600px">

  <div class="container text-white">
    <%= simple_form_for(@game) do |f| %>
      <%= f.input :sport,
              as: :radio_buttons,
              collection_wrapper_tag: 'div',
              collection_wrapper_class: 'sports-wrapper',
              item_wrapper_class: 'sports-item',
              input_html: {class: 'sports-selector'},
              collection: Game::VALID_SPORTS%>

      <%= f.input :name,
              label: "Game title",
              placeholder: "Make it pop",
              input_html: { class: "create-form-input"} %>

      <%= f.input :description,
              label: "Description",
              placeholder: "Anything other participants should know?",
              input_html: { class: "create-form-input"} %>


      <%= f.input :capacity,
            collection: 1..8,
            selected: 2,
            input_html: { class: "create-form-input"} %>

      <%= f.input :visibility,
              as: :radio_buttons,
              checked: "Public",
              collection_wrapper_tag: 'div',
              collection_wrapper_class: 'visibility-wrapper',
              item_wrapper_class: 'visibility-item',
              input_html: {class: 'visibility-selector'},
              collection: Game::VALID_VISIBILITIES %>

      <%= f.association :venue %>


      <% @venues[0..5].each do |venue|%>
        <div class="venue-card d-flex align-items-center justify-content-between", style = "height: 90px">
          <%= cl_image_tag(venue.photo.key, class: "card-game-image", style: "width: 120px; height: 90px; object-fit: cover;") %>
          <div class="venue-details">
            <%= venue.name %>
          </div>
        </div>
      <% end %>










      <%= f.submit %>
    <% end %>
  </div>
</div>
